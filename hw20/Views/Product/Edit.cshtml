@using hw20.Models
@model ProductViewModel

<h4>Product</h4>
<hr />
<div class="editProdOutContainer">
    <div class="editProdInnerContainer">
        @if(Model is null)
        {
            <p>Product not found</p>
        }
        else{
        <form id="editProdForm" asp-action="Edit" method="POST" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.Id" />
                        
            
            <div class="form-group">
                <label asp-for="Product.ProductName" class="control-label"></label>
                <input asp-for="Product.ProductName" class="form-control" />
                <span asp-validation-for="Product.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.ProductDescription" class="control-label"></label>
                <input asp-for="Product.ProductDescription" class="form-control" />
                <span asp-validation-for="Product.ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.ProductBasicPrice" class="control-label"></label>
                <input asp-for="Product.ProductBasicPrice" class="form-control" />
                <span asp-validation-for="Product.ProductBasicPrice" class="text-danger"></span>
            </div>

            
            <div class="form-group">
                <label class="control-label">Картинка</label>
                <input type="file" asp-for="Upload" class="form-control" accept="image/x-png, image/gif, image/jpeg"  />
                <span asp-validation-for="Upload" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input id="submitBtn" type="submit" style="width:100%; margin-top: 70px;" value="Save" class="btn btn-primary" />
            </div>
        </form>
        }
    </div>
</div>
<script src="~/js/EditProduct.js"  ></script>

