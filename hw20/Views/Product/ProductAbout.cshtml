@model hw20.Models.ProductViewModel

@{
    ViewData["Title"] = "About";
}
<link rel="stylesheet" href="~/css/ProductInfo.css" />

<h1>About</h1>

<div>
    <h4>Product Info:</h4>
    <hr />
    <dl class="row">
    </dl>
</div>

<div>

    <img class="ProductImage" src= "@Url.Content($"~/Img/Products/{Model.Product.Id}.jpeg")" alt="Image" />
   
    <p>Name: @Model.Product.ProductName</p>    
    <p>Description: @Model.Product.ProductDescription</p>    

</div>


<script src="~/js/ProductInfo.js" asp-append-version="true"></script>